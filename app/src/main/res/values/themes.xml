<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SupportChat" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SupportChat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SupportChat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SupportChat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MessageNotSeen" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MessageSeen" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="BoldText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VeryBoldText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>
</resources>